<h1>IT用語編集画面</h1>

<div class = "edit-word">
  <%= form_with model: @it_word, local:true do |f| %>
    <h4>IT用語</h4>
    <%= f.text_field :word, value: @it_word.word %>
    <h4>意味</h4>
    <%= f.text_area :body, value: @it_word.body %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "IT用語更新する" %>
  <% end %>
</div>