<div class = "container mt-5">
  <main class = "mx-auto pt-5">
    <div class ="col">
      <h1>【IT用語登録】</h1>
    </div>

    <!--入力フォーム-->
    <%= form_with model: @it_word, local:true do |f| %>
      <h4>IT用語</h4>
      <%= f.text_field :word %>
      <h4>意味</h4>
      <%= f.text_area :body %></br>
      <%= f.collection_select(:category_id, @categories, :id, :category) %></br>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.submit "IT用語登録する" %>
    <% end %>
  </main>
</div>